---
name: mongodb-acceptance-tests

packages:
  - golang-1.8-linux
  - mongodb-acceptance-tests

templates:
  config.json.erb: config.json
  errand.sh.erb: bin/run

properties:
  acceptance_tests.timeout_scale:
    description: Timeout scale to be used by the acceptance tests errand
    default: 1.0
  acceptance_tests.mongo_host:
    description: The MongoDB host that the acceptance tests will connect to
  acceptance_tests.mongo_port:
    description: The TCP port on which the mongod to be tested is listening
  acceptance_tests.mongo_root:
    description: The username used to connect to MongoDB
  acceptance_tests.mongo_root_password:
    description: The password used to connect to MongoDB
