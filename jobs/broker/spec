---
name: broker
packages:
- java-common
- openjdk
- mongodb-broker-pkg
consumes:
- name: server
  type: mongod

templates:
  bin/ctl: bin/ctl
  bin/monit_debugger: bin/monit_debugger
  data/properties.sh.erb: data/properties.sh
  helpers/ctl_setup.sh: helpers/ctl_setup.sh
  helpers/ctl_utils.sh: helpers/ctl_utils.sh
  config/application.yml.erb: config/application.yml
  config/log4j.xml.erb: config/log4j.xml
properties:
  broker.user:
    description: mongodb service broker user
    default: broker
  broker.password:
    description: mongodb service broker password
  mongodb_node.root_username:
    description: mongodb root username
  mongodb_node.root_password:
    description: mongodb root password
  broker.service_id:
    description: broker service ID
    default: mongodb-service-broker
  broker.service_name:
    description: broker service name
    default: mongodb
  broker.service_plan_id:
    description: broker plan ID
    default: mongo-plan
  broker.service_marketplace_label:
    description: service label in marketplace
    default: "MongoDB 3.4"
  broker.service_marketplace_description:
    description: service description in marketplace  
    default: "A MongoDB database on demand."
